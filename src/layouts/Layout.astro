---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="JedyStudio - Desarrollo de paginas web" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href="https://jedystudio.com/" />
    <!-- Favicon para navegadores -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <!-- Favicon en diferentes tamaños -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <!-- Apple Touch Icon para iOS -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="shortcut icon" type="image/png" href="favicon.ico"/> 
    <!-- Manifesto para PWA -->
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Meta tags para dispositivos móviles -->
    <meta name="theme-color" content="#ffffff" />
    <title>{title}</title>
    <meta
      name="description"
      content="JedyStudio crea sitios web atractivos y optimizados para empresas, startups y negocios que buscan captar clientes y mejorar su presencia online."
    />
    <meta
      name="keywords"
      content="diseño web, desarrollo web, landing pages, SEO, ecommerce, branding digital"
    />
    <meta name="author" content="JedyStudio" />
    <meta
      property="og:title"
      content={title}
    />
    <meta
      property="og:description"
      content="Creamos sitios web impactantes que convierten y potencian tu negocio."
    />
    <meta property="og:image" content="/logo.png" />
    <meta property="og:url" content="https://jedystudio.com" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  :root {
    --black: #110f14;
    --white: #ffffff;
    --gray: #a3a0a0;
  }
  @font-face {
    font-family: "InterBold";
    src: url("/fonts/Inter-Bold.ttf") format("woff");
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "InterRegular";
    src: url("/fonts/Inter-Regular.ttf") format("woff");
  }
  html {
    background-color: var(--white);
    scroll-behavior: smooth;
  }
</style>
