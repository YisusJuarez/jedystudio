---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>JedyStudio | Diseño Web para Empresas y Startups</title>
		<meta name="description" content="JedyStudio crea sitios web atractivos y optimizados para empresas, startups y negocios que buscan captar clientes y mejorar su presencia online.">
		<meta name="keywords" content="diseño web, desarrollo web, landing pages, SEO, ecommerce, branding digital">
		<meta name="author" content="JedyStudio">
		<meta property="og:title" content="JedyStudio | Diseño Web para Empresas y Negocios">
		<meta property="og:description" content="Creamos sitios web impactantes que convierten y potencian tu negocio.">
		<meta property="og:image" content="/logo.png">
		<meta property="og:url" content="https://jedystudio.com">
		<meta name="twitter:card" content="summary_large_image">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	* {
		margin: 0;
		padding: 0;
	}
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	:root {
		--black: #110F14;
		--white: #ffffff;
		--gray: #a3a0a0;
	}
	@font-face {
		font-family: "InterBold";
		src: url("/fonts/Inter-Bold.ttf") format("woff");
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: "InterRegular";
		src: url("/fonts/Inter-Regular.ttf") format("woff");
	}
	html {
		background-color: var(--white);
		scroll-behavior: smooth;
	}

</style>
